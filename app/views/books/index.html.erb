<h1>Books</h1>

<% @books.each do |book| %>
<%= book.title %>
<%= book.body %>
<%= link_to 'Show', book_path(book.id) %>
<%= link_to 'Edit', edit_book_path(book.id) %>
<%= link_to 'Destroy', book_path(book.id), method: :delete %>
<% end %>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>